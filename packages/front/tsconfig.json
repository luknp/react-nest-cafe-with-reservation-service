{
    "compilerOptions": {
      "sourceMap": true,
      "declaration": true,
      "declarationDir": "./dist/types",
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es5",
      "lib": [
        "es2015",
        "dom",
        "es2016",
        "es2017",
        "ESNext"
      ],
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react",
      "baseUrl": "./",
      "paths": {
        "components/*": [
          "src/components/*"
        ],
        "public/*": [
          "public/*"
        ],
        "shared/*": [
          "src/shared/*"
        ]
      }
    },
    "include": [
        "./src/**/*"
    ]
  }